    "gulp-connect": "^2.2.0",
    "gulp-gh-pages": "^0.4.0",
    "jest-cli": "^0.2.1",
    "marked": "^0.3.2",
    "react-docgen": "^1.0.2",
    "superagent": "^0.21.0",
    "uglifyify": "^2.6.0",
    "vinyl-source-stream": "^1.0.0"
  },
  "dependencies": {
    "classnames": "^1.2.0",
    "lodash": "^2.4.1",
    "react": "^0.13.1",
    "react-bootstrap": "^0.19.0"
